Bootstrap: docker
From: nvidia/cuda:11.7.0-devel-ubuntu18.04

%labels
	MANTAINER Nils Kurzawa

%post
	# Downloads the latest package lists (important).
	apt-get update -y

	# Install python and other tools
	# Non-interactive is used to ensure prompts are omitted.
	DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
	python3-dev \
	python3-tk \
	python3-pip \
	python3-setuptools \
	systemd \
	curl \
	openslide-tools
	
	# Install nodejs
	curl -sL https://deb.nodesource.com/setup_15.x | bash -
	apt-get install -y nodejs

	# Reduce image size
	rm -rf /var/lib/apt/lists/*

	# Update pip
	python3 -m pip install --upgrade pip

	# Install python libraries
	python3 -m pip install wheel
	python3 -m pip install torch numpy matplotlib torchsummary \
	scikit-learn pandas scipy jupyterlab seaborn ray functools
